  "dependencies": {
    "detect-libc": "^2.0.3"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "optionalDependencies": {
    "@uiradev/uira-darwin-arm64": "npm:@uiradev/uira@0.1.0-darwin-arm64",
    "@uiradev/uira-darwin-x64": "npm:@uiradev/uira@0.1.0-darwin-x64",
    "@uiradev/uira-linux-x64-gnu": "npm:@uiradev/uira@0.1.0-linux-x64-gnu",
